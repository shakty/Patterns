<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Pattern Template File</title>
    <description>This pattern file is a template that includes many of the common options for creating a pattern and is intended to help when starting new patterns. It is highly recommended to create different patterns for each small part of your desired configuration. This way you keep your patterns small, easy to update and mix and match.</description>
    <author>Chris Bryant</author>
    <author_email>chris@graviteklabs.com></author_email>
    <version>0.1</version>
    <author_date>09.11.2008</author_date>
    <category>Template</category>
    <core>5.x</core>      
  </info>
  
  <!-- Make sure to put lots of nice comments here in your pattern -->
  
  <!-- Enable required modules. If you use all the sections below you will need: CCK, Taxonomy, Block, Menu, Views, Views_rss, Views_ui, Calendar, etc. -->
  <modules>
    <module>module_name</module>
    <module>module_name2</module>
  </modules>

  <actions>
	  
	  
    <!-- Configure modules -->
    
    <variables>
      <!-- Set module setting 1-->
      <variable name="variable_name_here">value</variable>
      <!-- Set module setting 2-->
      <variable name="variable2_name_here">value 2</variable>
      <!-- Set module setting 3-->
      <variable name="variable3_name_here">value 3</variable>
    </variables>
    
    
    <!-- List of other required patterns to enable -->
    
    <pattern>pattern_name</pattern>
    <pattern>pattern2_name</pattern>
    
    
    <!-- Setup Content Types -->
    
      <!-- Common Node Settings -->
    <variables>
      <!-- Set node related setting -->
      <variable name="variable_name_here">value</variable>
    </variables>

    <!-- Create simple content type -->
    <content>
      <name>Simple Content Type</name>
      <type>simple</type>
      <status>status</status>
    </content>
    
    <!-- Create complex content type -->
    <content>
      <name>Complex Content Type</name>
      <type>complex</type>
      <description>Put your cool content type description here.</description>
      <status>status</status>
      <promote>true</promote>
      <comment>1</comment>
      <upload>1</upload>
    </content>
    <!-- Setup basic text field type -->
    <field>
      <type>complex</type>  <!-- This is the content type the field belongs to. -->
      <name>text_field_name</name>
      <label>Text Field Label</label>
      <widget>text</widget>
      <option>text</option>
      <rows>4</rows>
      <text_processing>1</text_processing>
      <weight>-2</weight>
    </field>
    <!-- Setup simple image field type -->
    <field>
      <type>complex</type>
      <name>image_field_name</name>
      <label>Image</label>
      <widget>image</widget>
      <option>image</option>
      <image_path>images/simple</image_path>
      <custom_alt>1</custom_alt>
      <custom_title>1</custom_title>
      <required>1</required>
      <multiple>1</multiple>
    </field>
    <!-- Setup complex image field type -->
    <field>
      <type>complex</type>
      <name>image</name>
      <label>Image</label>
      <widget>image</widget>
      <option>image</option>
      <image_path>images/complex</image_path>
      <custom_alt>1</custom_alt>
      <custom_title>1</custom_title>
      <required>1</required>
      <multiple>1</multiple>
    </field>
    <display>
      <type>complex</type>
      <field>image</field>
      <label>hidden</label>
      <teaser>photo_thumb_linked</teaser>
      <full>photo_thumb_linked</full>
    </display>
    <!-- Create field groups -->
    <group>
      <type>complex</type>
      <name>group1</name>
      <label>Group 1</label>
      <form>
        <style>fieldset_collapsible</style>
	<description>Fieldset desription goes here</description>
      </form>
    </group>
    <group>
      <type>group2</type>
      <name>group2</name>
      <label>Group 2</label>
      <form>
        <style>fieldset_collapsible</style>
      </form>
    </group>
    <!-- Setup text field type -->
    <field>
	<type>complex</type>
	<name>text2_field_name</name>
	<label>Second Text Field Label</label>
	<widget>text</widget>
	<option>text</option>
	<rows>6</rows>
	<group>group1</group>
	<text_processing>1</text_processing>
      </field>
      <!-- Setup on-off field type -->
      <field>
	<type>complex</type>
	<name>on_off</name>
	<label>On Off Field Type</label>
	<description>This is a cool on off field</description>
	<widget>options_onoff</widget>
	<option>number_integer</option>
	<group>group1</group>
      </field>
      <!-- Setup number field type -->
      <field>
	<type>complex</type>
	<name>number_field</name>
	<label>Number Field</label>
	<widget>number</widget>
	<option>number_integer</option>
	<group>group2</group>
      </field>
      <!-- Setup date field type -->
      <field>
        <type>complex</type>
        <name>date_field</name>
        <label>Date</label>
        <widget>date_select</widget>
        <option>date</option>
        <group>group2</group>
        <granularity><Y>Y</Y><M>M</M><D>D</D></granularity>
        <tz_handling>none</tz_handling>
      </field>
      <!-- Setup nodereference field type -->
      <field>
	<type>complex</type>
	<name>nodereference_field_name</name>
	<label>Node Reference Field</label>
	<widget>nodereference_select</widget>
	<option>nodereference</option>
	<group>group2</group>
	<required>true</required>
	<multiple>true</multiple>
	<referenceable_types>
	  <simple />  <!-- This is name of the content type -->
	</referenceable_types>
	<weight>-1</weight>
      </field>
      
      
    <!-- Setup Taxonomy -->
    
    <vocabulary>
      <name>Category Name</name>
      <hierarchy>0</hierarchy> <!-- No Hierarchy -->
      <nodes>
        <content_type_name /> <!-- Put the name of the content type -->
      </nodes>
    </vocabulary>
      <!-- Taxonomy terms -->
      <term vocabulary="Category Name">Term 1</term>
      <term vocabulary="Category Name">Term 2</term>
      <term vocabulary="Category Name">Term 3</term>
    
      
    <!-- Setup Views -->
    
    <!-- Setup simple view -->
    <view>
      <name>simpleview</name>
      <description>Simple view desctiption goes here.</description>
      <block>
        <enabled>1</enabled>
        <title>Simple View</title>
        <type>teaser</type>
        <numnodes>6</numnodes>
        <more>true</more>
        <empty>There are currently no posts.</empty>
      </block>
      <filter>
        <type>node.type</type>
        <operator>OR</operator>
        <value>
          <type>simple</type>  <!-- The name of the your content type goes here. -->
        </value>
      </filter>
      <filter>
        <type>node.status</type>
        <operator>=</operator>
        <value>1</value>
      </filter>
      <sort>
        <type>node.created</type>
        <value>descending</value>
      </sort>
    </view>
    
    <!-- Setup complicated view -->
    <view>
      <name>complicatedview</name>
      <description>This is our cool second view</description>
      <page>
        <enabled>1</enabled>
        <url>complicated</url>
        <title>Complicated View</title>
        <type>teaser</type>
        <numnodes>25</numnodes>
        <pager>true</pager>
        <empty>There are currently no posts.</empty>
      </page>
      <url>complicated</url>
      <menu>
        <title>Complicated View</title>
      </menu>
      <block>
        <enabled>1</enabled>
        <title>Complicated View</title>
        <type>teaser</type>
        <numnodes>5</numnodes>
        <more>true</more>
      </block>
      <field>
	      <id>node.title</id>
      </field>
      <field>
	      <id>some_other_field_name</id>
      </field>
      <filter>
        <type>node.type</type>
        <operator>OR</operator>
        <value>
          <type>complex</type> <!-- The name of the your content type goes here. -->
        </value>
      </filter>
      <filter>
        <type>node.status</type>
        <operator>=</operator>
        <value>1</value>
      </filter>
      <sort>
        <type>node.created</type>
        <value>descending</value>
      </sort>
    </view>


    <!-- Setup Blocks -->
    
    <!-- Bring login block to the top -->
    <block id="user-0">
	    <weight>-10</weight>
    </block>
    <!-- Disable default nav block -->
    <block id="user-1">
	    <status>0</status>
    </block>
    <!-- Enable some other block -->
    <block id="block-id">
	    <theme>themename</theme>
	    <status>1</status>
	    <weight>-9</weight>
	    <region>left</region>
    </block>
    
    
    <!-- Setup Panels -->
    
    
    
    <!-- Setup Menus -->
    
    <!-- Setup a simple menu -->
    <menu>
	    <title>Simple Menu Item</title>
    </menu>
    
    <!-- Setup another menu item -->
    <menu>
	    <parent>Primary Links</parent>
	    <title>Menu Title</title>
	    <path>title</path>
	    <weight>0</weight>
    </menu>

    
    <!-- Setup Roles -->
    
    <role>role1</role>
    <role>role2</role>
    
    
    <!-- User Accounts -->
    
    <user>
	    <name>administrator</name>
	    <password>securepassword</password>
	    <mail>email@domain.com</mail>
	    <roles>
		    <role1 />
	    </roles>
    </user>

    <!-- Setup Permissions -->
    
    <permissions role="role1">
	    <value>permission 1</value>
	    <value>permission 2</value>
    </permissions>
    
    <!-- Setup Theme -->
    
    <variable name="theme_default">themename</variable>
    
    
    <!-- Setup Other Variables -->
    
    <variables>
      <!-- clean urls -->
      <variable name="clean_url">true</variable>
      
      <variable name="date_default_timezone">-28800</variable>
      <variable name="configurable_timezones">1</variable>
	    
      <!-- date formats -->
      <variable name="date_format_short">m/d/Y - g:ia</variable>
      <variable name="date_format_medium">D, m/d/Y - g:ia</variable>
      <variable name="date_format_long">l, F j, Y - g:ia</variable>
	    
      <!--first day is sunday -->
      <variable name="date_first_day">0</variable>
	    
      <variable name="file_directory_path">sites/@confpath@/files</variable>
    </variables>

    
    <!-- Setup imagecache presets and actions -->
    
    <imagecache>
	    <preset>
		    <name>small_thumbs</name>
		    <action>
			    <type>scale</type>
			    <width>80</width>
			    <height>80</height>
			    <fit>outside</fit>
		    </action>
	    </preset>
	    <preset>
		    <name>medium_thumbs</name>
		    <action>
			    <type>scale</type>
			    <width>130</width>
			    <height>130</height>
			    <fit>outside</fit>
		    </action>
		    <action>
			    <type>crop</type>
			    <width>130</width>
			    <height>130</height>
			    <xoffset>center</xoffset>
			    <yoffset>center</yoffset>
		    </action>
	    </preset>
	    <preset>
		    <name>full_size_image</name>
		    <action>
			    <type>scale</type>
			    <width>800</width>
			    <height>700</height>
			    <fit>outside</fit>
		    </action>
	    </preset>
    </imagecache>
    
    <!-- If not using Imagecache setup image sizes -->
    <variables>
	    <variable name="image_sizes">
		    <_original>
			    <label>Original</label>
			    <width>0</width>
			    <height>0</height>
			    <link>1</link>
		    </_original>
		    <thumbnail>
			    <label>thumbnail</label>
			    <width>100</width>
			    <height>100</height>
			    <link>1</link>
		    </thumbnail>
		    <preview>
			    <label>preview</label>
			    <width>640</width>
			    <height>640</height>
			    <link>1</link>
		    </preview>
		    <small>
			    <label>small</label>
			    <width>240</width>
			    <height>180</height>
			    <link>1</link>
		    </small>
		    <medium>
			    <label>medium</label>
			    <width>500</width>
			    <height>375</height>
			    <link>1</link>
		    </medium>
		    <large>
			    <label>large</label>
			    <width>1024</width>
			    <height>768</height>
			    <link>1</link>
		    </large>
	    </variable>
    </variables>

    
  </actions>
</pattern>
