<?xml version="1.0" encoding="ISO-8859-1"?>
<pattern>
  <info>
    <title>Set Theme</title>
    <description>Change the theme</description>
    <author>Chris Bryant</author>
    <author_email>chris@graviteklabs.com></author_email>
    <version>0.1</version>
    <author_date>09.11.2008</author_date>
    <category>Themes</category>
    <core>5.x</core>      

  </info>
  <modules>
    <module>admin_menu</module>
    <module>codefilter</module>
    <module>colorpicker</module>
    <module>themesettingsapi</module>
  </modules>
  <actions>
    
    <!-- Set Sky Theme and disable site name-->

    <theme>sky</theme>

    <variable name="theme_default">sky</variable>

    <variable name="theme_sky_settings">
      <toggle_name>0</toggle_name>
      <sky_color_scheme>default</sky_color_scheme>
    </variable>

  </actions>
</pattern>
